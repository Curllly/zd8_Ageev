<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".TaskListActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/roboto"
        android:text="@string/edit_deal"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Все дела-->
    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="69dp"
        android:orientation="vertical">
        <!--Первое дело-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/task_background">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/first_deal"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Вечерний поход в кино"
                    android:backgroundTint="@color/yellow"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/first_deal_date"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="38dp"
                    android:backgroundTint="@color/yellow"
                    android:text="10.02.2021"
                    android:inputType="date"
                    android:textColor="@color/white"
                    android:textSize="11dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/first_deal_discriprion"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Идём в кино с коллегами"
                    android:backgroundTint="@color/yellow"
                    android:textColor="@color/discription"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/first_deal_time"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="38dp"
                    android:text="19:40"
                    android:inputType="time"
                    android:backgroundTint="@color/yellow"
                    android:textColor="@color/white"
                    android:textSize="11dp" />

            </LinearLayout>
        </LinearLayout>
        <!--Второе дело-->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/task_background">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/second_deal"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Забрать заказ Ozon"
                    android:backgroundTint="@color/yellow"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/second_deal_date"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="38dp"
                    android:backgroundTint="@color/yellow"
                    android:text="10.02.2021"
                    android:inputType="date"
                    android:textColor="@color/white"
                    android:textSize="11dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/second_deal_discriprion"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Пункт выдачи ул.Ленина, 103"
                    android:backgroundTint="@color/yellow"
                    android:textColor="@color/discription"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/second_deal_time"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="38dp"
                    android:text="19:40"
                    android:inputType="time"
                    android:backgroundTint="@color/yellow"
                    android:textColor="@color/white"
                    android:textSize="11dp" />

            </LinearLayout>
        </LinearLayout>
        <!--Третье дело-->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/task_background">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/third_deal"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Запись в автосервис"
                    android:backgroundTint="@color/yellow"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/third_deal_date"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="38dp"
                    android:backgroundTint="@color/yellow"
                    android:text="10.02.2021"
                    android:inputType="date"
                    android:textColor="@color/white"
                    android:textSize="11dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/third_deal_discriprion"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Сдать автомобиль в автосервис на ул.Бисертская, д. 14. Замена масла"
                    android:backgroundTint="@color/yellow"
                    android:textColor="@color/discription"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/third_deal_time"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="38dp"
                    android:text="19:40"
                    android:inputType="time"
                    android:backgroundTint="@color/yellow"
                    android:textColor="@color/white"
                    android:textSize="11dp" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="312dp"
            android:layout_height="48dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:text="@string/save"
            android:background="@color/button"
            android:onClick="saveButtonPush"/>


    </LinearLayout>


</LinearLayout>